
        
<div class="main">

<h1>Welcome <%=@user.username%>!</h1>

<% if @user.exercises %>
  <h2>Your past exercises:</h2>
    <ul  class="exercise-list">
    <% @user.exercises.each do |exercise| %>
      <h2>Your exercise for <%=exercise.date%>:</h2>
      <li><%=exercise.description%></li>
    <% end %>
    </ul>
<% else %>
  <h2>You have not done any exercises yet! Let's get started!</h2>
<% end %> 
  <h2>Click here to get a new exercise:</h2>
  <form id="exercise-button" action="/exercises/new" method="post"> 
    <input type="submit" name="submit" value="Get Exercise">
  </form>
</div>

